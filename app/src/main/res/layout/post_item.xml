<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_activity_list_img"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        app:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/detail_activity_list_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text=" Lorem Ipsum."
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/component_color">

        <androidx.cardview.widget.CardView
            android:id="@+id/detail_activity_comment_ic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/detail_activity_comment_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_activity_list_contents"
                app:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/detail_activity_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text=" Lorem Ipsum."
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/detail_activity_comment_ic"
            app:layout_constraintStart_toEndOf="@id/detail_activity_comment_ic"
            app:layout_constraintTop_toTopOf="@id/detail_activity_comment_ic" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
        android:id="@+id/ib_profile1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_proflie_image_background"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_dog1"
        app:layout_constraintEnd_toStartOf="@+id/ib_profile2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/ib_profile2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/selector_proflie_image_background"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_dog2"
        app:layout_constraintBottom_toBottomOf="@+id/ib_profile1"
        app:layout_constraintEnd_toStartOf="@+id/ib_profile3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ib_profile1"
        app:layout_constraintTop_toTopOf="@+id/ib_profile1" />

    <ImageButton
